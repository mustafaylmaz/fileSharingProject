<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>File Manager</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <script
      src="https://code.jquery.com/jquery-3.5.1.min.js"
      integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
      crossorigin="anonymous"
    ></script>

    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
      integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
      integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
      crossorigin="anonymous"
    ></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css"
      integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
  </head>
  <body>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">File GUID</th>
          <th scope="col">File Name</th>
          <th scope="col">File Extension</th>
          <th scope="col">Size</th>
          <th scope="col">Upload Time</th>
          <th scope="col">Download</th>
          <th scope="col">Edit</th>
          <th scope="col">Delete</th>
        </tr>
      </thead>
      <tbody>
        <% files.forEach((item,index) => { %>
        <tr>
          <th scope="row"><%=item.id%></th>
          <td><%=item.file_id%></td>
          <td><%=item.file_name%></td>
          <td><%=item.file_extension%></td>
          <td><%=item.file_size%></td>
          <td><%=item.createdAt%></td>
          <td>
            <a href="/<%=useruId%>/<%=dir.dir_name%>/<%=item.file_id%>"
              ><i class="fa-solid fa-download"></i
            ></a>
          </td>
          <td>
            <a
              data-toggle="modal"
              data-id="<%=item.file_id%>"
              class="editmodal"
              data-target="#exampleModal"
              href="#"
            >
              <i class="fa-solid fa-pen-to-square"></i
            ></a>
          </td>
          <td>
            <a href="#" class="delete-file" data-id="<%=item.id%>"> <i class="fa-solid fa-trash"></i></a>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    <form
      action="/filemanager/<%=dirUId%>"
      enctype="multipart/form-data"
      method="POST"
    >
      <input id="currentVirtualDir" type="hidden" value="<%=dirUId%>" />
      <input type="file" class="justify-content-center" name="myFile" />
      <input
        type="submit"
        class="justify-content-center"
        value="Upload a file"
      />
    </form>

    <!-- Modal -->
    <div
      class="modal fade"
      id="exampleModal"
      tabindex="-1"
      role="dialog"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Update file name</h5>
            <button
              type="button"
              class="close"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <input
              type="text"
              name=""
              name="newfilename"
              id="newfilename"
              placeholder="New File Name "
            />
          </div>
          <div class="modal-footer">
            <form action="">
              <button
                type="button"
                class="btn btn-secondary"
                data-dismiss="modal"
              >
                Close
              </button>
              <button type="button" class="btn btn-primary sendnewfilename">
                Save changes
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </body>
  <script>
    var uid,id, newFileName;
    $(document).on("click", ".editmodal", function () {
      uid = $(this).data("id");
    });
    $(document).on("click", ".sendnewfilename", function () {
      var newFileName = $(".modal-body #newfilename").val();
      $.post(
        "http://localhost:3000/filemanager/edit/ajax",
        {
          newFileName: newFileName,
          id: uid,
        },
        (res) => {
          console.log(res);
        }
      );
    });
    $(document).on("click", ".delete-file", function() {
      fileId = $(this).data("id");
      $.post("delete", {id:fileId}, (res)=>{console.log();})
    })
  </script>
</html>
