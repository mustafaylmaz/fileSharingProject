<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Virtual Directory</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"
      integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"
      integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <h2>Add Directory</h2>
    <form id="addDir2" method="post" action="/virtualdir/">
      <div class="input-group">
        <input
          type="text"
          aria-label="name"
          name="dir_name"
          class="form-control"
          value="directory name"
        />
        <input
          type="text"
          aria-label="description"
          name="dir_description"
          class="form-control"
          value="description"
        />

        <input type="submit" class="btn btn-success" value="Add" />
      </div>
    </form>
    <hr />

    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Description</th>
          <th scope="col">Directory Name</th>
          <th scope="col">Delete</th>
          <th scope="col">View</th>
        </tr>
      </thead>
      <tbody>
        <% virtualdirs.forEach((item,index) => { %>
        <tr>
          <th scope="row"><%=item.id%></th>
          <td><%=item.dir_description%></td>
          <td><%=item.dir_name%></td>

          <td>
            <form
              method="POST"
              action="/virtualdir/<%=item.id%>"
              enctype="application/x-www-form-urlencoded"
            >
              <button type="submit">
                <input type="hidden" name="_method" value="DELETE" />
                <a href=""><i class="fa fa-close"></i></a>
              </button>
            </form>
          </td>
          <td>
            <a href="/filemanager/<%=item.id%>"><i class="fa fa-eye"></i></a>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    <hr />
    <h1>Files:</h1>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">File GUID</th>
          <th scope="col">File Name</th>
          <th scope="col">File Extension</th>
          <th scope="col">Size</th>
          <th scope="col">Upload Time</th>
        </tr>
      </thead>
      <tbody>
        <% files.forEach((item,index) => { %>
        <tr>
          <th scope="row"><%=item.id%></th>
          <td><%=item.file_id%></td>
          <td><%=item.file_name%></td>
          <td><%=item.file_extension%></td>
          <td><%=item.file_size%></td>
          <td><%=item.createdAt%></td>
        </tr>
        <% }) %>
      </tbody>
    </table>


    <form
      action="/filemanager/"
      
      enctype="multipart/form-data"
      method="POST" 
    >
      <input type="file" class="form-control" name="myFile" />
      <input type="submit"  class="btn btn-primary " value="Upload a file" />
    </form>
    <li><a href="/auth/logout">Logout</a></li>
  </body>

  <script src="http://code.jquery.com/jquery-3.0.0.min.js"></script>
</html>
